    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/material": "^2.0.0-beta.5",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/router": "^4.1.2",
    "core-js": "^2.4.1",
    "fabric": "^1.7.11",
    "lodash.debounce": "^4.0.8",
    "material-components-web": "^0.11.0",
    "ng2-dnd": "^4.0.2",
    "rxjs": "^5.4.0",
    "slugify": "^1.1.0",
